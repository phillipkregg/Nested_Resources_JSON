<h1>Listing comments</h1>

<%= link_to "Add Comment", new_post_comment_path(@post) %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Post</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.title %></td>
    <td><%= comment.content %></td>
    <td><%= comment.post_id %></td>
    <td><%= link_to 'Show', {:action => "show", :id => comment.id, :post_id => @post.id } %></td>
    <td><%= link_to 'Edit', {:action => "edit", :id => comment.id, :post_id => @post.id } %></td>
    <td><%= link_to "Delete Comment", [@post, comment], :method => :delete, :confirm => "Are you sure you want to delete this?" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back to Posts', posts_path %>

